<form>
    <label for="w3review">Questions:</label><br>
    <textarea id="w3review" name="w3review" style="font-size: 15pt" rows="5" cols="49" placeholder="Any questions..."> </textarea>
        
    
<br>
    <input type="submit" style=" font-size: large ; background-color: rgb(13, 110, 253); color:antiquewhite ;" value=" Submit ">

  </form>
  <script>
    var acc = document.getElementsByClassName("accordion");
    var i;
    
    for (i = 0; i < acc.length; i++) {
      acc[i].addEventListener("click", function() {
        this.classList.toggle("help-active");
        var panel = this.nextElementSibling;
        if (panel.style.display === "block") {
          panel.style.display = "none";
        } else {
          panel.style.display = "block";
        }
      });
    }
    </script>

